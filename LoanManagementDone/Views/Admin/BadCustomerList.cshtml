@model IEnumerable<LoanManagementDone.Models.MultipleAdminView>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<br />


<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        <h3>Bad Customer List</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>


                        <th>Customer Name</th>
                        <th>Loan Amount</th>
                        <th>Total to be paid</th>

                        <th>Loan Approval Date</th>
                        <th>Payment Date</th>
                        <th>Loan Type</th>

                        <th>Payment Status</th>
                        <th>Details</th>
                        <th>Give Response</th>
                        <th>Delete </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>


                        <th>Customer Name</th>
                        <th>Loan Amount</th>
                        <th>Total to be paid</th>

                        <th>Loan Approval Date</th>
                        <th>Payment Date</th>
                        <th>Loan Type</th>

                        <th>Payment Status</th>
                        <th>Details</th>
                        <th>Give Response</th>
                        <th>Delete </th>
                    </tr>
                    <tr>
                        <td colspan="11">  <a href="/Customer/LoanCreate" class="btn btn-success "><i class="bi bi-plus-circle"></i>   Add New Loan Application</a></td>
                    </tr>

                </tfoot>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>



                            <td>@(item.CustomerAdminview.FirstName + " " + item.CustomerAdminview.MiddleName + " " + item.CustomerAdminview.LastName)</td>
                            <td>@item.LoanApplicationAdminView.LoanAmount</td>
                            <td>@item.LoanApplicationAdminView.TotalAmount</td>

                            <td>@item.LoanApplicationAdminView.LoanApplicationApprovedDate</td>
                            <td>@item.LoanApplicationAdminView.PaymentDate</td>


                            <td>@item.LoanTypesAdminView.LoanName</td>



                            <td>@item.LoanApplicationAdminView.PaymentStatus</td>

                            <td>
                                <a href="/Admin/BorrowerDetails/@item.LoanApplicationAdminView.LoanApplicationId" class="btn btn-info btn-rounded"><i class="bi bi-eye"></i>Details</a>
                            </td>
                            <td>
                                <a href="/Admin/BorrowerPayment/@item.LoanApplicationAdminView.LoanApplicationId" class="btn btn-info btn-rounded"><i class="bi bi-eye"></i>Payment </a>
                            </td>

                            <td>
                                <a href="/Admin/BorrowerDelete/@item.LoanApplicationAdminView.LoanApplicationId" class="btn btn-danger btn-rounded"><i class="bi bi-trash"></i>Delete</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card-footer small text-muted">
    Updated on<div id="current_date">


        <script>
            document.getElementById("current_date").innerHTML = Date();
        </script>
    </div>

</div>
