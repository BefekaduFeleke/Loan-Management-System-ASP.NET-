<br />
<br />


<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        <h3>Customer List</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                        <th>Gender</th>
                        <th>Date of Birth</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Occupation</th>
                        <th>Rating</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                        <th>Gender</th>
                        <th>Date of Birth</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Occupation</th>
                        <th>Rating</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    <tr>
                        <td colspan="11">  <a href="/Admin/SuretyCreate" class="btn btn-success "><i class="bi bi-plus-circle"></i>   Add New Customer</a></td>
                    </tr>

                </tfoot>
                <tbody>

                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.CustomerId</td>
                            <td>@(customer.FirstName + " "+customer.MiddleName + " "+customer.LastName)</td>
                            <td>@customer.Gender</td>
                            <td>@customer.DateOfBirth</td>
                            <td>@customer.PhoneNumberOne</td>
                            <td>@customer.Email</td>
                            <td>@customer.Occupation</td>
                            <td>@customer.Rating</td>
                            <td>
                                <a href="/Admin/Details/@customer.CustomerId" class="btn btn-info btn-rounded"><i class="bi bi-eye"></i>Details</a>
                            </td>
                            <td>
                                <a href="/Admin/Edit/@customer.CustomerId" class="btn btn-primary btn-rounded"><i class="bi bi-pencil-square"></i>Edit</a>
                            </td>
                            <td>
                                <a href="/Admin/Delete/@customer.CustomerId" class="btn btn-danger btn-rounded"><i class="bi bi-trash"></i>Delete</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</div>
